@page "/admin/customers/overview"
@using Casus_Applicatie.Models
@using Microsoft.EntityFrameworkCore
@inject CasusDbContext DbContext
@inject CustomerService CustomerService
@inject IJSRuntime JS

<PageTitle>Customers | Overview</PageTitle>


<style>
    body {
        color: #404E67;
        background: #F5F7FA;
        font-family: 'Open Sans', sans-serif;
    }
    .table-wrapper {
        width: 2000px;
        margin: 30px auto;
        background: #fff;
        padding: 20px;
        box-shadow: 0 1px 1px rgba(0,0,0,.05);
    }
    .table-title {
        padding-bottom: 10px;
        margin: 0 0 10px;
    }
    .table-title h2 {
        margin: 6px 0 0;
        font-size: 22px;
    }
    .table-title .add-new {
        float: right;
        height: 30px;
        font-weight: bold;
        font-size: 12px;
        text-shadow: none;
        min-width: 100px;
        border-radius: 50px;
        line-height: 13px;
    }
    .table-title .add-new i {
        margin-right: 4px;
    }
    table.table {
        table-layout: fixed;
    }
    table.table tr th, table.table tr td {
        border-color: #e9e9e9;
    }
    table.table th i {
        font-size: 13px;
        margin: 0 5px;
        cursor: pointer;
    }
    table.table th:last-child {
        width: 100px;
    }
    table.table td a {
        cursor: pointer;
        display: inline-block;
        margin: 0 5px;
        min-width: 24px;
    }
    table.table td a.add {
        color: #27C46B;
    }
    table.table td a.edit {
        color: #FFC107;
    }
    table.table td a.delete {
        color: #E34724;
    }
    table.table td i {
        font-size: 19px;
    }
    table.table td a.add i {
        font-size: 24px;
        margin-right: -1px;
        position: relative;
        top: 3px;
    }
    table.table .form-control {
        height: 32px;
        line-height: 32px;
        box-shadow: none;
        border-radius: 2px;
    }
    table.table .form-control.error {
        border-color: #f50000;
    }
    table.table td .add {
        display: none;
    }
</style>

<h1>Customers | Overview</h1>

@if (customers == null)
{
    <p><em>Loading...</em></p>
}
else if (!customers.Any())
{
    <p>No customers found.</p>
}
else
{
    <div class="">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-8"><h2>Customer <b>Details</b></h2></div>
                    <div class="col-sm-4">
                        <a href="/admin/customers/add">
                            <button type="button" class="btn btn-info add-new"><i class="fa fa-plus"></i>+ Voeg gebruiker toe</button>
                        </a>
                    </div>
                </div>
            </div>
            @if (!string.IsNullOrEmpty(removalStatus))
            {
                <p>@removalStatus</p>
            }
            <table class="table table-bordered" style="table-layout: fixed; width: auto;">
                <thead>
                <tr>
                    <th style="width: 1%">#</th>
                    <th style="width: 10%">Voornaam</th>
                    <th style="width: 10%">Achternaam</th>
                    <th style="width: 10%">Email</th>
                    <th style="width: 10%">Telefoonnummer</th>
                    <th style="width: 20%">Acties</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var customer in customers)
                {
                    <tr>
                        <th scope="row" style="color: #666666;">@customer.CustomerId</th>
                        <td>@customer.FirstName</td>
                        <td>@customer.LastName</td>
                        <td>@customer.Email</td>
                        <td>@customer.PhoneNumber</td>
                        <td>
                            <button class="btn btn-danger btn-sm" @onclick="() => DeleteCustomer(customer.CustomerId)">
                                Verwijderen!
                            </button>
                            <a href="/admin/customers/edit/@customer.CustomerId">
                                <button class="btn btn-warning btn-sm">
                                    Aanpassen!
                                </button>
                            </a>
                            <a href="/admin/customers/edit/@customer.CustomerId">
                                <button class="btn btn-primary btn-sm">
                                    Automatisch matchen!
                                </button>
                            </a>
                        </td>

                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>     
}

@code {
    private List<Customer> customers;
    private string removalStatus;
    
    
    protected override async Task OnInitializedAsync()
    {
        // Upon load of site, retrieve Accommodation from accommodationService using the slug (id)
        customers = await CustomerService.GetAllAsync();
    }
    

    private async Task DeleteCustomer(int id)
    {
        bool status = await JS.InvokeAsync<bool>("confirm", "Weet je zeker dat je gebruiker " + id + " wilt verwijderen? Alle reserveringen worden ook verwijderd...");
        bool deleteStatus;
        if (status)
        {
            deleteStatus = await CustomerService.RemoveAsync(id);

            if (deleteStatus)
            {
                removalStatus = "Verwijderen succesvol";
                
                // This is really cool. By calling this function the table gets reset. First cool thing about EF till now.
                customers = await CustomerService.GetAllAsync();
            }
            else
            {
                removalStatus = "Verwijderen onsuccesvol";
            }
        }
    }
}