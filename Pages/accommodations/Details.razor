@page "/detail/{Id:int}"
@using Casus_Applicatie.Models
@inject AccommodationService AccommodationService

<PageTitle>Accommodation | Details</PageTitle>

@if (selectedAccommodation == null)
{
    <div class="text-center mt-5">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="mt-3 text-muted">Loading accommodation details...</p>
    </div>
}
else
{
    <div class="container mt-4">
        <div class="row g-4">
            <!-- Image -->
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <img src="@(
                        string.IsNullOrWhiteSpace(selectedAccommodation.ImageUrl)
                        ? "https://via.placeholder.com/800x500?text=No+Image"
                        : selectedAccommodation.ImageUrl
                    )"
                         class="card-img-top"
                         alt="@selectedAccommodation.Name" />
                </div>
            </div>

            <!-- Details -->
            <div class="col-md-6">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h2 class="card-title">@selectedAccommodation.Name</h2>

                        <p class="text-muted mb-2">
                            📍 @selectedAccommodation.Location?.City,
                            @selectedAccommodation.Location?.Country
                        </p>

                        <h4 class="text-success mb-3">
                            @if (selectedAccommodation.Price.HasValue)
                            {
                                @($"€ {selectedAccommodation.Price:0.00} / night")
                            }
                            else
                            {
                                <span class="text-muted">Price on request</span>
                            }
                        </h4>

                        <hr />

                        <h5>Description</h5>
                        <p>
                            @(
                                string.IsNullOrWhiteSpace(selectedAccommodation.Description)
                                ? "No description available."
                                : selectedAccommodation.Description
                            )
                        </p>

                        <div class="mt-4 d-flex gap-2">
                            <button class="btn btn-primary">
                                Book now
                            </button>

                            <a href="/accommodations" class="btn btn-outline-secondary">
                                Back to list
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Extra info section -->
        <div class="row mt-5">
            <div class="col">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="mb-3">Accommodation Details</h4>

                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <strong>Accommodation ID:</strong>
                                @selectedAccommodation.AccommodationId
                            </li>
                            <li class="list-group-item">
                                <strong>Location ID:</strong>
                                @selectedAccommodation.LocationId
                            </li>
                            <li class="list-group-item">
                                <strong>Bookings:</strong>
                                @selectedAccommodation.Bookings.Count
                            </li>
                            <li class="list-group-item">
                                <strong>Properties:</strong>
                                @selectedAccommodation.Accommodationproperties.Count
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {

    // Specify that this Id is a parameter? Do i need to add set to this? why can i set my parameter? I miss laravel man
    [Parameter]
    public int Id { get; set; }
    private Accommodation selectedAccommodation;
    protected override async Task OnInitializedAsync()
    {
        
        
        // Upon load of site, retrieve Accommodation from accommodationService using the slug (id)
        selectedAccommodation = await AccommodationService.GetByIdAsync(Id);
    }
}
}